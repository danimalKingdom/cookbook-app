<div class="jumbotron text-center">
  <h1>All Recipes</h1>
  
  <% if current_user %>
    <h3>Current User: <%= current_user.email %></h3>
  <% end %>

  <a href="/recipes?sort=prep_time&sort_order=ASC">Sort by ascending prep time</a>
  <a href="/recipes?sort=prep_time&sort_order=DESC">Sort by descending prep time</a>
</div>

<% @recipes.each_slice(3) do |three_recipes| %>
  <div class="row">
    <% three_recipes.each do |recipe| %>
      <div class="col-md-4 col-sm-4">
        <div class="well">
          <h2>Title: <a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h2>
          <p>Chef: <%= recipe.chef %></p>
          <p>Ingredients: <%= recipe.ingredients %></p>
          <p>Directions: <%= recipe.directions %></p>
          <p>Prep time: <%= recipe.prep_time %></p>
          <img src="<%= recipe.image %>" alt=""><br>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
  