<h1>Log In!</h1>

<%= form_tag '/login', method: :post do %>

  <div>
    <label for="email">Email</label>
    <input type="text" name="email">
  </div>
  
  <div>
    <label for="password">Password</label>
    <input type="password" name="password">
  </div>

  <input type="submit" value="Login">

  <% end %>